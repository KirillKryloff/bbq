<h2>Изменить пароль</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
<div class="row">
    <div class="col-lg-6">
      <div class="field form-group">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <div class="field form-group">
        <%= f.label :Новый_пароль %> <br />
        <%= f.password_field :password, autocomplete: "new-password" %>
        <% if @minimum_password_length %>
          <br />
          <em>(Минимум <%= @minimum_password_length %> символов)</em>
        <% end %>
      </div>

      <div class="field form-group">
        <%= f.label :Подтверждение_пароля %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </div>

      <div class="field form-group">
        <%= f.label :Текущий_пароль %> <br />
        <%= f.password_field :current_password, autocomplete: "current-password" %>
      </div>

      <div class="actions">
        <%= f.submit "Обновить" %>
      </div>
    </div>
  </div>
<% end %>

<p><%= button_to "Удалить учетную запись", registration_path(resource_name), data: { confirm: "Вы уыерены?" }, method: :delete, class: "btn btn-danger" %></p>

<%= link_to "Назад", :back %>
